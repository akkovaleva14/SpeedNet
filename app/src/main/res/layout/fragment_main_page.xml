<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/purple_200"
    android:orientation="vertical"
    android:paddingTop="100dp"
    tools:context=".MainPageFragment">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="32dp"
        android:background="@android:drawable/editbox_background"
        android:backgroundTint="@color/purple_500"
        android:padding="8dp">

        <TextView
            android:id="@+id/download_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="4dp"
            android:text="@string/download_speed"
            android:textColor="@color/white"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@id/upload_text"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/upload_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="4dp"
            android:text="@string/upload_speed"
            android:textColor="@color/white"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@id/download_text"
            app:layout_constraintTop_toTopOf="parent"
            tools:layout_editor_absoluteX="134dp"
            tools:layout_editor_absoluteY="394dp" />

        <TextView
            android:id="@+id/download_info"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="4dp"
            android:textColor="@color/white"
            app:layout_constraintEnd_toStartOf="@id/upload_info"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/download_text"
            tools:text="@string/download_speed_info" />

        <TextView
            android:id="@+id/upload_info"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="4dp"
            android:textColor="@color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@id/download_info"
            app:layout_constraintTop_toBottomOf="@id/upload_text"
            tools:layout_editor_absoluteX="134dp"
            tools:layout_editor_absoluteY="394dp"
            tools:text="@string/upload_speed_info" />


    </androidx.constraintlayout.widget.ConstraintLayout>

    <Button
        android:id="@+id/button_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="100dp"
        android:text="@string/button_start" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="32dp"
        android:layout_marginTop="100dp"
        android:background="@android:drawable/editbox_background"
        android:padding="8dp">

        <TextView
            android:id="@+id/basic_left"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="4dp"
            android:text="@string/basic_left"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@id/basic_right"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/basic_right"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="4dp"
            android:text="@string/basic_right"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@id/basic_left"
            app:layout_constraintTop_toTopOf="parent"
            tools:layout_editor_absoluteX="134dp"
            tools:layout_editor_absoluteY="394dp" />

        <TextView
            android:id="@+id/average_left"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="4dp"
            android:text="@string/average_left"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@id/average_right"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/basic_left" />

        <TextView
            android:id="@+id/average_right"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="4dp"
            android:text="@string/average_right"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@id/average_left"
            app:layout_constraintTop_toBottomOf="@id/basic_right"
            tools:layout_editor_absoluteX="134dp"
            tools:layout_editor_absoluteY="394dp" />


        <TextView
            android:id="@+id/fast_left"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="4dp"
            android:text="@string/fast_left"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@id/fast_right"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/average_left" />

        <TextView
            android:id="@+id/fast_right"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="4dp"
            android:text="@string/fast_right"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@id/fast_left"
            app:layout_constraintTop_toBottomOf="@id/average_right"
            tools:layout_editor_absoluteX="134dp"
            tools:layout_editor_absoluteY="394dp" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>